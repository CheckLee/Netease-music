.global-rank
  .content
    width: calc(100% + 6px)
    display: flex
    flex-wrap: wrap
    .item
      flex: 0
      width: calc((100% - 12px)/3)
      margin-right: 6px
      .pic
        width: 246px
        height: 246px
        background: #ccc;
        position: relative
        .update
          width: 226px
          height: 46px
          line-height: 46px
          position: absolute
          bottom: 0
          font-size: 26px
          color: $color-background-d
          padding-left: 10px
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis
      .rank-title-wrapper
        height: 112px
        .rank-title
          padding: 14px 10px 0 10px
          font-size: 26px
          line-height: 30px
          -ms-text-overflow: -o-ellipsis-lastline
          text-overflow: -o-ellipsis-lastline
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 2
          -webkit-box-orient: vertical
