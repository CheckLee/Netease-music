.personal-fm
  display: flex
  flex-direction: column
  align-items: center
  color: $color-background-d
  .blur-wrapper
    z-index: -1
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%;
    height: 100%
    filter: blur(100px)
    .blur-pic
      height: 100%
  .pic-wrapper
    width: 586px
    height: 586px
    margin-top: 180px
    background: #cccccc
    border-radius: 10px
    position: relative
    .pic
      position: absolute
      margin: auto
      top: 0
      left: 0
      right: 0
      bottom: 0
      width: 586px
      height: 586px
      border-radius: 10px

  .song
    margin-top: 60px
    font-size: 40px
    line-height: 60px
    height: 60px
  .singer
    color: #cccccc
    .name
      display: inline-block
      vertical-align: middle
      font-size: 26px
      height: 34px
      line-height: 34px
    i
      vertical-align: middle
      font-size: 32px
      margin-left: -12px
  .handlers
    width: 684px
    display: flex
    position: absolute
    bottom: 36px
    justify-content: space-between
    align-items: center
    .info
      font-size: 60px
    .skip
      font-size: 80px
    .play
      font-size: 108px
