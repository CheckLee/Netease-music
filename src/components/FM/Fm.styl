.fm
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 1000
  .header
    position: relative
    width: 100%
    height: 104px
    display: flex
    align-items: center
    justify-content: center
    z-index: 1001
    color: $color-background-d
    .back
      width: 60px
      height: 60px
      position: absolute
      left: 14px
      i
        font-size: 60px
    .info
      width: 60px
      height: 60px
      position: absolute
      right: 14px
      i
        font-size: 60px
    .classes
      display: flex
      align-items: center
      .classes-item
        display: flex
        flex-direction: column
        align-items: center
        i
          font-size: 40px
        .text
          font-size: 14px
          height: 36px
          line-height: 36px
        &:nth-child(1)
          margin-right: 80px
        &:nth-child(2)
          i, .text
            color: #ccc

  .content
    z-index: 1000
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: #343435;
