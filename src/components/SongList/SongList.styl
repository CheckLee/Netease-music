.song-list
  background: $color-background-d
  position: fixed
  top: 184px
  bottom: 0
  width: 100%
  z-index: 0
  .song-list-content
    height: 100%
    overflow: hidden
    .header
      height: 282px
      width: 100%
      background: #343435
      position: relative
      .pic
        width: 210px
        height: 210px
        background: #cccccc
        position: absolute
        margin: 36px
      .desc
        position: absolute
        margin: 36px 36px 36px 282px
        color: $color-background-d
        .superior
          font-size: 38px
          margin-top: 20px
          margin-bottom: 36px
          display: flex
          align-items: center
          .text
            font-size: 38px
            height: 48px
            line-height: 48px
          .right
            display: inline
            font-size: 48px
            color: #ccc;
        .title
          display: block
          font-size: 30px
          margin-bottom: 20px
        .sub-title
          display: block
          font-size: 24px
          color: #ccc;
    .tab
      height: 141px
      width: 100%
      display: flex
      align-items: center
      justify-content: space-between
      .all
        height: 47px
        width: 200px
        font-size: 30px
        display: flex
        justify-content: center
        align-items: center
        border: 1px solid #ccc
        border-radius: 47px
        margin-left: 36px
        .right
          color: #cccccc
          font-size: 40px
          width: 26px
      .tips
        font-size: 30px
        color: #ccc
        margin-right: 36px
        .tip
          color: $color-text
    .content
      width: calc(100% + 14px)
      display: flex
      flex-wrap: wrap
      .item
        flex: 1
        width: calc((100% - 14px)/2)
    .blank
      width: 100%
      height: 112px
