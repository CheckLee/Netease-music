.justify-order
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 1000
  background: $color-background-d
  .header
    width: 100%
    height: 104px
    background: $color-theme-primary
    color: $color-background-d
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    .title
      font-size: 32px
    .finish
      font-size: 28px
      position: absolute
      right: 24px
  .tip
    height: 94px
    line-height: 94px
    padding-left: 20px
    color: #ccc;
    border-bottom: 1px solid #ccc
    font-size: 26px
  .drag-wrapper
    .list-group
      .list-group-item
        height: 94px
        line-height: 94px
        border-bottom: 1px solid #ccc
        padding-left: 30px
        position: relative
        .handle
          font-size: 36px
          color: #ccc;
          position: absolute
          right: 30px
          top: 47px
          transform: translate(0, -50%)
  .footer
    height: 200px
    display: flex
    justify-content: center
    align-items: center
    .recovery-order
      font-size: 26px
      color: #333
      text-decoration: underline
.ghost
  opacity: .4
  background: #ccc
.chosen
  border: 1px solid #cccccc
  background: none
