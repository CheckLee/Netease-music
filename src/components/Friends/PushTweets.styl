@import '~assets/stylus/variable.styl'

.push-tweets
  width: 100%
  background-color: $color-background
  position: fixed
  bottom: 0
  top: 104px
  .push-tweets-content
    height: 100%
    overflow: hidden
    .tweets-card
      margin-bottom: 24px
    .hottopics
      width: 100%
      .hottopics-swiper
        width: 100%
        .hottopics-slide
          width: 200px!important
          height: 200px
          overflow: hidden
          .hottopics-content-wrapper
            position: relative
            width: 100%
            height: 100%
            img
              width: inherit
              height: inherit
              object-fit: fill
