@import '~assets/stylus/variable.styl'

.logined-account-card
  display: flex
  flex-direction: column
  padding-bottom: 34px
.row
  display: flex
  justify-content: space-between
  align-items: center
  margin-top: 34px
  .account-brief
    display: flex
    align-items: center
    .account-avatar
      width: 140px
      height: 140px
      border-radius: 100%
      margin: 0 24px 0 36px
      overflow: hidden
      img
        width: inherit
        height: inherit
        object-fit: fill
    .account-name, .account-level
      height: 46px
      line-height: 46px
      display: block
    .account-name
      font-size: $font-size-large-xxxll
    .account-level
      font-size: $font-size-large-xxx
      i
        color: $color-icon
  .account-action-daily
    width: 164px
    margin-right: 36px
    position: relative
    .toast-wrapper
      position: absolute
      left: -100%
      bottom: 34px
      display: flex
      width: 100%
      justify-content: center
  .account-detail
    display: flex
    text-align: center
    li
      flex-grow: 1
      width: 188px
      *
        height: 46px
        line-height: 46px
      p
        font-size: $font-size-large-xxx
        color: $color-icon
      span
        font-size: $font-size-large-xxxll
  .account-action-modify
    font-size: $font-size-large-xxx
    width: 164px
    text-align: center
    margin-right: 36px



.toast-popup-enter-active, .toast-popup-leave-active
  transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  bottom: 34px
  opacity: 1;

.toast-popup-enter, .toast-popup-leave-active
  bottom: -50px
  opacity: 0;
