.radio
  width: 100%
  .content
    .column
      margin-bottom: 12px
      display: flex
      justify-content: space-between
      .item
        width: calc((100% - 12px)/3)
        .pic
          width: 246px
          height: 246px
          background: #ccc;
          position: relative
          .pay
            position: absolute
            top: 0
            left: 0
            background: $color-theme-primary
            font-size: 10px
            padding: 4px 8px
            color: $color-background-d
            border-radius: 0 0 14px 0
          .desc
            width: 246px
            height: 46px
            line-height: 46px
            position: absolute
            bottom: 0
            font-size: 26px
            color: $color-background-d
            padding: 0 10px
            overflow: hidden
            white-space: nowrap
            text-overflow: ellipsis
        .text-wrapper
          height: 112px
          .text
            padding: 14px 10px 0 10px
            font-size: 26px
            line-height: 30px
            -ms-text-overflow: -o-ellipsis-lastline
            text-overflow: -o-ellipsis-lastline
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical

