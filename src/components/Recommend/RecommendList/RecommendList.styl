.recommend-list
  width: 100%
  .content
    .column
      margin-bottom: 12px
      display: flex
      justify-content: space-between
      .item
        width: calc((100% - 12px)/3)
        .pic
          width: 246px
          height: 246px
          background: #ccc;
          position: relative
          .play-count
            position: absolute
            height: 58px
            top: 0
            right: 0
            display: flex
            align-items: center
            color: $color-background-d
            .material-icons
              font-size: 28px
              margin-right: 6px
            .count
              font-size: 28px
              margin-right: 10px

        .text-wrapper
          height: 112px
          .text
            padding: 14px 10px 0 10px
            font-size: 26px
            line-height: 30px
            -ms-text-overflow: -o-ellipsis-lastline
            text-overflow: -o-ellipsis-lastline
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical

