.radio
  background: $color-background-d
  position: fixed
  top: 184px
  bottom: 112px
  width: 100%
  z-index: 0
  .radio-content
    height: 100%
    overflow: hidden
    .swiper-container
      height: 258px
      width: 100%
      overflow: hidden
      background: #ccc
    .panel
      box-sizing: border-box
      width: 100%
      height: 100px
      border-bottom: 1px solid #ccc
      padding-top: 16px
      padding-bottom: 16px
      display: flex
      align-items: center
      margin-bottom: 30px
      .panel-item
        flex: 1
        display: flex
        justify-content: center
        align-items: center
        height: 100%
        &:nth-child(1)
          border-right: 1px solid #ccc
        .material-icons
          color: $color-theme-primary
          font-size: 50px
          margin-right: 16px
        .text
          font-size: 30px
    .class
      .class-item
        margin-bottom: 30px
        .column
          box-sizing: border-box
          width: 100%
          height: 100px
          border-bottom: 1px solid #ccc
          padding-top: 16px
          padding-bottom: 16px
          display: flex
          align-items: center
          &:nth-child(2)
            border-top: 1px solid #ccc
          .item
            flex: 1
            display: flex
            justify-content: center
            align-items: center
            height: 100%
            &:nth-child(1)
              border-right: 1px solid #ccc
            .material-icons
              color: $color-theme-primary
              font-size: 50px
              margin-right: 16px
            .text
              font-size: 30px
              width: 126px
