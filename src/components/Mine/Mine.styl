.mine
  height: 100%
  z-index: 0
  .header
    z-index: 1
    .search
      position: relative
      width: 100%
      height: 104px
      background-color: $color-theme-primary
      display: flex
      justify-content: space-evenly
      align-items: center
      .panel
        width: 540px
        height: 70px
        color: $color-background-d
        border-radius: 36px
        display: flex
        justify-content: center
        align-items: center
      .blank
        width: 56px
        height: 56px
  .mine-content
    height: 100%
    overflow: hidden
    section
      background: $color-background-d
    .mine-info
      .mine-info-item
        height: 94px
        display: flex
        &:last-child
          .right
            border-bottom: none
        .left
          width: 140px
          display: flex
          justify-content: center
          align-items: center
          i
            font-size: 56px
            color: $color-theme-primary
        .right
          flex: 1
          display: flex
          align-items: center
          border-bottom: 1px solid #cccccc
          justify-content: flex-end
          position: relative
          .text
            position: absolute
            left: 0
          .desc
            font-size: 28px
            color: #cccccc
          i
            font-size: 52px
            color: #cccccc
