.mine
  height: 100%
  z-index: 0
  position: relative
  .header
    position: relative
    z-index: 1
    .search
      position: relative
      width: 100%
      height: 104px
      background-color: $color-theme-primary
      display: flex
      justify-content: space-evenly
      align-items: center
      .panel
        width: 540px
        height: 70px
        color: $color-background-d
        border-radius: 36px
        display: flex
        justify-content: center
        align-items: center
      .blank
        width: 56px
        height: 56px
  .mine-content
    height: 100%
    overflow: hidden
    position: relative
    section
      background: $color-background-d
    .mine-info
      .mine-info-item
        height: 94px
        display: flex
        &:last-child
          .right
            border-bottom: none
        .left
          width: 140px
          display: flex
          justify-content: center
          align-items: center
          i
            font-size: 56px
            color: $color-theme-primary
        .right
          flex: 1
          display: flex
          align-items: center
          border-bottom: 1px solid #cccccc
          justify-content: flex-end
          position: relative
          .text
            position: absolute
            left: 0
          .desc
            font-size: 28px
            color: $color-text
          i
            font-size: 52px
            color: #cccccc
    .playlists
      .panel
        height: 50px
        background: #ccc
        color: $color-text
        display: flex
        align-items: center
        position: relative
        .show
          font-size: 50px
          margin: 0 10px
        .text
          font-size: 24px
          height: 50px
          line-height: 50px
        .more
          position: absolute
          font-size: 50px
          right: 10px
      .lists
        .list-item
          height: 130px
          display: flex
          &:last-child
            .right
              border-bottom: none
          .left
            height: 130px
            width: 130px
            margin-right: 10px
            img
              height: 118px
              width: 118px
              margin: 6px
          .right
            flex: 1
            box-sizing: content-box
            border-bottom: 1px solid #ccc
            padding-top: 6px
            .name
              display: block
              height: 72px
              line-height: 72px
              width: 610px
              font-size: 32px
              overflow: hidden
              white-space: nowrap
              text-overflow: ellipsis
            .count
              font-size: 24px
              color: $color-text

  .fixed-panel
    height: 50px
    width: 100%
    background: #ccc
    color: $color-text
    display: flex
    align-items: center
    position: fixed
    top: 104px
    z-index: 0
    .show
      font-size: 50px
      margin: 0 10px
    .text
      font-size: 24px
      height: 50px
      line-height: 50px
    .more
      position: absolute
      font-size: 50px
      right: 10px
